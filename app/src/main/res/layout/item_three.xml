<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintTop_toBottomOf="@+id/card5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/layout6"
                tools:ignore="NotSibling">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    >
                    <LinearLayout
                        android:id="@+id/lay1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/con5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        >
                        <TextView
                            android:id="@+id/textNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW"
                            android:textSize="15dp"
                            android:background="@drawable/rounded_shape"
                            />
                        <TextView
                            android:id="@+id/textDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30% off"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/rounded_shapered"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lay2"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/lay1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        >
                        <TextView
                            android:id="@+id/textItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iphone 8 Plus"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/textBrandName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apple"
                            android:layout_marginTop="10dp"
                            android:textSize="15dp"
                            />
                        <ImageView
                            android:id="@+id/imgRate"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:src="@drawable/ic_rating1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay3"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/lay2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        >
                        <TextView
                            android:id="@+id/textPrice1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="980000 Ks"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@android:color/holo_red_light"
                            />
                        <TextView
                            android:id="@+id/textPrice2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100000 Ks"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:layout_marginLeft="10dp"
                            android:foreground="@drawable/line_strick"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@+id/layout5"
                app:layout_constraintTop_toBottomOf="@+id/card5"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="NotSibling">
                <ImageView
                    android:id="@+id/imgItemImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/camera"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>